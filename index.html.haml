                    %span{:class=>"label label-primary"}
                      CDI 1.2
                  %li
                    %a{:href=>"http://download.jboss.org/weld/3.0.2.Final/wildfly-11.0.0.Final-weld-3.0.2.Final-patch.zip"}Weld 3.0.2.Final
                    %span{:class=>"label label-info"}
                      CDI 2.0
            %tr
              %td
                WildFly 10.1.0.Final
              %td
                Weld 2.3.5.Final
                %span{:class=>"label label-primary"}
